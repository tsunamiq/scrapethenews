
 




<div class="container">
  <div class="row">

    <div class="col s12 " id="articles">
     
        {{#each articles}}
          {{#unless this.saved}}
            
            <div class="col s4">
              <div class="card">
                <div class="card-image">
                  <img src="{{this.pic}}">
                  <span class="card-title">{{this.title}}</span>
                  <form action="/api/add/{{this.id}}?_method=PUT" method="POST" >
                    <button class="btn-floating halfway-fab waves-effect waves-light red">
                      <i class="material-icons">add</i>
                    </button>
                  </form>
                </div>
                <div class="card-content">
                  <p>{{this.con}}</p>
                </div>
              </div>
            </div>
         
            
            
          {{/unless}}
        {{/each}}
     
    </div>
    
  </div>      
</div>

