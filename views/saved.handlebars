
 



<div class="container">
  <div class="row">

    <div class="col s12 " id="articles">
        {{#if articles}}
          {{#each articles}}
            {{#if this.saved}}
              
              <div class="col s4">
                <div class="card">
                  <div class="card-image">
                    <img src="{{this.pic}}">
                    <span class="card-title">{{this.title}}
                    </span>

                  </div>

                  <div class="card-content">
                    <p>{{this.con}}</p>
                  </div>
                  <div class="card-action">
                    <div class="row">
                      <div class="col s9">
                        <!-- ============================================== -->
                        <!-- Modal: Trigger and Structure for viewing notes -->
                        <!-- ============================================== -->

                        <a class="waves-effect waves-light  modal-trigger" href="#{{this.title}}-viewnotes">View Notes</a>
                       
                        <!-- Modal Structure -->
                        <div id="{{this.title}}-viewnotes" class="modal">
                          <div class="modal-content">
                            <h4>Notes on {{this.title}}</h4>
                             {{#each this.note}}
                                <div class="row">
                                  <div class="col s12 m12">
                                    <div class="card">
                                      <div class="card-content">
                                        <span class="card-title">{{this.name}}</span>
                                       <p>{{this.note}}</p>
                                      </div>
                                    </div>
                                  </div>
                                </div>
                             {{/each}}
                          </div>
                          <div class="modal-footer">
                            <a href="#!" class="modal-action modal-close waves-effect waves-green btn-flat">Close</a>
                          </div>
                        </div>

                        <!-- ============================================== -->
                        <!-- Modal: Trigger and Structure for saving a note -->
                        <!-- ============================================== -->

                        <a class="waves-effect waves-light  modal-trigger" href="#{{this.title}}-addnote">Add Note</a>
                       
                        <!-- Modal Structure -->
                        <div id="{{this.title}}-addnote" class="modal">
                          <div class="modal-content">
                            <h4>Add A Note</h4>
                            

                            <div class="row">
                              <form action="/api/add/note/{{this.id}}" method="POST" class="col s12">
                                <div class="row">
                                  <div class="input-field col s6">
                                    <input id="user-name" name="name" type="text">
                                    <label for="user-name">User Name</label>
                                  </div>
                                </div>
                                <div class="row">
                                  <div class="input-field col s12">
                                    <textarea id="note" name="note" class="materialize-textarea"></textarea>
                                    <label for="note">Note</label>
                                  </div>
                                </div>
                                <button class="btn waves-effect waves-light" id="submit" type="submit">Submit
                                  <i class="material-icons right">send</i>
                                </button>
                              </form>
                            </div>
                          </div>
                        </div>
                        <!-- end of modal -->
                      </div> 
                      <div class="col s1 pull-s1">
                         
                        <form action="/api/remove/{{this.id}}?_method=PUT" method="POST" >
                            <button class="btn-floating waves-effect waves-light ">
                              <i class="material-icons">delete</i>
                            </button>
                        </form> 
                      </div>
                    </div>    
                  </div>
                </div>
              </div>
           
              
              
            {{/if}}
          {{/each}}
        {{/if}}

    </div>
    
  </div>      
</div>

